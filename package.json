{
  "name": "dex-backend",
  "version": "1.1.2",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "postinstall": "npx prisma generate",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "serve": "nest start",
    "serve:dev": "nest start --watch",
    "serve:debug": "nest start --debug --watch",
    "serve:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "test jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e .env.test -- jest --runInBand --config ./test/jest-e2e.json",
    "db": "docker compose up",
    "db:deploy": "docker compose up -d",
    "db:remove": "docker compose down ",
    "db:redeploy": "npm run db:remove; npm run db:deploy",
    "db:stop": "docker compose stop ",
    "db:push-schema": "npx prisma db push",
    "postdb:deploy": "sleep 1.5; npm run db:push-schema",
    "pretest:e2e": "dotenv -e .env.test npm run db:push-schema",
    "prisma:test-studio": "dotenv -e .env.test npx prisma studio",
    "prisma:studio": "npx prisma studio"
  },
  "dependencies": {
    "@aeternity/aepp-sdk": "^13.2.1",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.2.1",
    "@prisma/client": "^3.15.2",
    "dex-contracts-v2": "github:aeternity/dex-contracts-v2",
    "dotenv": "^16.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.8.0",
    "swagger-ui-express": "^4.3.0",
    "ws": "^8.5.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "27.4.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^27.2.5",
    "jest-mock-extended": "^2.0.5",
    "prettier": "^2.8.7",
    "prisma": "^3.15.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFiles": [
      "dotenv/config",
      "./test/setup.ts"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
